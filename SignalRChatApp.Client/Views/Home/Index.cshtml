@{
    ViewData["Title"] = "Home Page";
}

<style>
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #btn-send {
        width: 200px;
    }
    /* .form-control{
        width:500px !important;
    } */
</style>

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <div id="conn-result" style="display:none;"></div>
        </div>
        <div class="col-md-6">
            <input id="txt-user" class="form-control" />
        </div>
        <br />
        <div class="col-md-6">
            <input id="txt-message" class="form-control" />
        </div>
        <br />
            <button id="btn-send" class="btn btn-dark">Send</button>
