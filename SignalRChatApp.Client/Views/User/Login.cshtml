@model LoginViewModel;
@{
    Layout = null;
}
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<head>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"> </script>
</head>
<div class="container">
    <h2 class="form-title">Sign In</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <form asp-action="Login" asp-controller="User" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" asp-for="Email">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label" asp-for="Password">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="RememberMe">
            <label class="form-check-label" for="exampleCheck1" asp-for="RememberMe">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary" value="Login">Submit</button>
    </form>
</div>


<script src="~/js/bootstrap.min.js"></script>
